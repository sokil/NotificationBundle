{% extends "NotificationBundle::layout.html.twig" %}

{% block title %}{{ subject }} :: {% endblock %}

{% block content %}
    <div class="container">
        <div class="block top-space">
            <div class="title">{{ subject }}</div>
            <div class="content">
                <iframe id="preview" style="width: 100%; height: 450px; border: 0;"></iframe>
                <script type="text/javascript">
                    document.getElementById('preview').contentDocument.body.innerHTML = '{{ body | raw | escape('js') }}';
                </script>
            </div>
        </div>
    </div>
{% endblock %}